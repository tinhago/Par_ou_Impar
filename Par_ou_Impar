#include <stdio.h>

int main()
{
  int valor1,valor2,valor3;
  printf("\n Informe o primeiro valor inteiro");
  scanf ("%d", & valor1);
    if ((valor1 %2)==0)
    {
        printf("\n %d par", valor1);
    }else
    {
        printf("\n %d Impar", valor1);
    }
    printf("\n Informe o segundo valor inteiro");
  scanf ("%d", & valor2);
    if ((valor2 %2)==0)
    {
        printf("\n %d par", valor2);
    }else
    {
        printf("\n %d Impar", valor2);
    }
    printf("\n Informe o terceiro valor inteiro");
  scanf ("%d", & valor3);
    if ((valor3 %2)==0)
    {
        printf("\n %d par", valor3);
    }else
    {
        printf("\n %d Impar", valor3);
    }


  return 0;
}
